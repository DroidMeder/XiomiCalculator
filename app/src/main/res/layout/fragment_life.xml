<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/iv_area_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_age" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintBottom_toTopOf="@+id/iv_data_converter"
        app:layout_constraintEnd_toEndOf="@+id/iv_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_age" />

    <ImageView
        android:id="@+id/iv_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_area_conversion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_bmi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bmi"
        app:layout_constraintBottom_toTopOf="@+id/iv_discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_bmi"
        app:layout_constraintTop_toBottomOf="@+id/iv_bmi" />

    <ImageView
        android:id="@+id/iv_area_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/iv_bmi"
        app:layout_constraintStart_toEndOf="@+id/iv_age"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_conversion_area" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/square"
        app:layout_constraintBottom_toTopOf="@+id/iv_date"
        app:layout_constraintEnd_toEndOf="@+id/iv_area_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_area_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_area_conversion" />

    <ImageView
        android:id="@+id/iv_data_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/iv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/icon_data_converter" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"
        app:layout_constraintBottom_toTopOf="@+id/iv_length_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_data_converter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_data_converter" />

    <ImageView
        android:id="@+id/iv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_date"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/icon_discount" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discount"
        app:layout_constraintBottom_toTopOf="@+id/iv_radix_conversion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_discount"
        app:layout_constraintTop_toBottomOf="@+id/iv_discount" />

    <ImageView
        android:id="@+id/iv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/iv_discount"
        app:layout_constraintStart_toEndOf="@+id/iv_data_converter"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/icon_date" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Date"
        app:layout_constraintBottom_toTopOf="@+id/iv_weight_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_date"
        app:layout_constraintStart_toStartOf="@+id/iv_date"
        app:layout_constraintTop_toBottomOf="@+id/iv_date" />

    <ImageView
        android:id="@+id/iv_length_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/iv_weight_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/icon_conversion_length" />

    <ImageView
        android:id="@+id/iv_weight_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/iv_radix_conversion"
        app:layout_constraintStart_toEndOf="@+id/iv_length_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/icon_conversion_weight" />

    <ImageView
        android:id="@+id/iv_radix_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_weight_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/icon_conversion_radix" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length"
        app:layout_constraintBottom_toTopOf="@+id/iv_velocity_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_length_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_length_conversion" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        app:layout_constraintBottom_toTopOf="@+id/iv_temp_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_weight_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_weight_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_weight_conversion" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numeral_system"
        app:layout_constraintBottom_toTopOf="@+id/iv_time_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_radix_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_radix_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_radix_conversion" />

    <ImageView
        android:id="@+id/iv_velocity_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/iv_temp_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/icon_conversion_velocity" />

    <ImageView
        android:id="@+id/iv_temp_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/iv_time_conversion"
        app:layout_constraintStart_toEndOf="@+id/iv_velocity_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/icon_conversion_temperature" />

    <ImageView
        android:id="@+id/iv_time_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_temp_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/icon_conversion_time" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed"
        app:layout_constraintBottom_toTopOf="@+id/iv_volume_conversion"
        app:layout_constraintEnd_toEndOf="@+id/iv_velocity_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_velocity_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_velocity_conversion" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/iv_temp_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_temp_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_temp_conversion" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_time_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_time_conversion" />

    <ImageView
        android:id="@+id/iv_volume_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/iv_velocity_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/icon_conversion_volume" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_volume_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_volume_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_volume_conversion" />
</androidx.constraintlayout.widget.ConstraintLayout>