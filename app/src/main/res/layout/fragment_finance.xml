<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_currency_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/iv_invest_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_conversion_currency_g" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        app:layout_constraintEnd_toEndOf="@+id/iv_currency_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_currency_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_currency_conversion" />

    <ImageView
        android:id="@+id/iv_invest_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/iv_currency_conversion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_investment_calc" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/investment"
        app:layout_constraintEnd_toEndOf="@+id/iv_invest_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_invest_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_invest_conversion" />

    <ImageView
        android:id="@+id/iv_loan_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/iv_currency_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_currency_conversion"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@drawable/icon_home_loan" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan"
        app:layout_constraintEnd_toEndOf="@+id/iv_loan_conversion"
        app:layout_constraintStart_toStartOf="@+id/iv_loan_conversion"
        app:layout_constraintTop_toBottomOf="@+id/iv_loan_conversion" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_invest_conversion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gst" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GST"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>